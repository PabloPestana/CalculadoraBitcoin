<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_cotacao_atual" android:layout_weight="0.1"
            android:text="@string/txt_cotacao_atual"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_cotacao_bitcoin" android:layout_weight="1"
            android:textStyle="bold" tools:text="@string/txt_cotacao_bitcoin"/>
</LinearLayout>